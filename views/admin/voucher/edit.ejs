<!-- head -->
<%- include("../../partials/header.ejs") %>
<!-- navbar -->
<%- include("../../partials/navbar.ejs") %>
<!-- siderbar -->
<%- include("../../partials/sidebar.ejs") %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Voucher</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/voucher">Voucher</a></li>
            <li class="breadcrumb-item active">Create</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Create Voucher Form</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form
              action="/voucher/edit/<%= voucher._id %>?_method=PUT"
              method="POST"
              enctype="multipart/form-data"
            >
              <div class="card-body">
                <div class="form-group">
                  <label for="price">Game Name</label>
                  <input
                    name="name"
                    value="<%= voucher.name %>"
                    type="text"
                    class="form-control"
                    id="name"
                    placeholder="Input  game name"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="category">Category</label>
                  <select
                    class="form-control select2"
                    style="width: 100%"
                    name="category"
                    required
                    data-placeholder="Choose category game"
                  >
                    <option selected="selected">
                      -- Choose category game --
                    </option>
                    <% category.forEach((item) => { %>
                    <option value="<%= item._id %>"
                      <% if(item._id.toString() == voucher.category._id.toString() ) {%>
                      selected
                      <% } %>
                        ><%= item.name %></option>
                    <% }) %>
                  </select>
                </div>
                <div class="form-group">
                  <label for="nominals">Nominal</label>
                  <div class="select2-purple">
                    <select
                      class="form-control select2"
                      multiple="multiple"
                      style="width: 100%"
                      name="nominals"
                      required
                      data-placeholder="Choose Coin Price"
                    >
                      <% nominal.forEach((nominal) => { %>
                      <option value="<%= nominal._id %>" 
                        <% voucher.nominals.forEach((voucherNominal) => { %>
                          <% if(nominal._id.toString() == voucherNominal._id.toString()) { %>
                            selected
                         <% } %>
                       <% }) %>
                        >
                        <%= nominal.coinName %> <%= nominal.price %>
                      </option>
                      <% }) %>
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <label for="image">Game Image</label>
                  <input
                    name="image"
                    type="file"
                    class="form-control"
                    id="image"
                    placeholder="Input  game image"
                  />
                </div>
                <br />
                <img id="preview" src="http://localhost:3001/images/<%= voucher.thumbnail %>" alt="<%= voucher.thumbnail %>" />
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">
                  Update Voucher
                </button>
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<%- include("../../partials/footer.ejs") %>
<!-- javascript -->
<%- include("../../partials/js.ejs") %>

<script>
  function readURL(input) {
    if (input.files && input.files[0]) {
      const reader = new FileReader();

      reader.onload = function (e) {
        console.log(e.target.result, "target result");
        $("#preview").attr("src", e.target.result);
        $("#preview").attr("width", "20%");
        $("#preview").attr("height", "20%");
      };
      reader.readAsDataURL(input.files[0]);
    }
  }

  $("#image").change(function () {
    console.log(this);
    readURL(this);
  });
</script>
