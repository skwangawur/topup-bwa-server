<!-- head -->
<%- include("../../partials/header.ejs") %>
<!-- navbar -->
<%- include("../../partials/navbar.ejs") %>
<!-- siderbar -->
<%- include("../../partials/sidebar.ejs") %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Payment</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/payment">Paymnet</a></li>
            <li class="breadcrumb-item active">Create</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Create Payment Form</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/payment/edit/<%= payment._id %>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="type">Payment Type</label>
                  <input
                    name="type"
                    type="text"
                    class="form-control"
                    id="type"
                    placeholder="Input  payment type"
                    required
                    value="<%= payment.type %>"
                  />
                </div>
                <div class="form-group">
                  <label for="banks">Banks</label>
                  <div class="select2-purple">
                    <select
                      class="form-control select2"
                      multiple="multiple"
                      style="width: 100%"
                      name="banks"
                      required
                      data-placeholder="Choose Bank"
                    >
                      <% bank.forEach((bank) => { %>
                      <option value="<%= bank._id %>"
                        <% payment.banks.forEach((bankPayment) => { %>
                        <%if(bankPayment._id.toString() == bank._id.toString())
                        { %> selected <% }
                        %> <% }) %> >
                        <%= bank.author %> - <%= bank.bankAccount %>
                      </option>
                      <% }) %>
                    </select>
                  </div>
                </div>
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">
                  Update Payment
                </button>
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<%- include("../../partials/footer.ejs") %>
<!-- javascript -->
<%- include("../../partials/js.ejs") %>
